@page "/registrar"

<PageTitle>Registrar</PageTitle>

<h1>Registrar</h1>

<h3>Ingresa tus datos para crear tu cuenta.</h3>

<div>
    <div class="mb-3">
        <label for="nombre">Nombre</label>
        <input id="nombre" class="form-control" @bind="nombre" />
    </div>

    <div class="mb-3">
        <label for="email">Email</label>
        <input id="email" class="form-control" @bind="email" />
    </div>

    <a href="/" class="btn btn-danger">Volver</a>
    <button class="btn btn-success me-2">Registrar</button>
</div>

@code {
    private string nombre = "";
    private string email = "";
}