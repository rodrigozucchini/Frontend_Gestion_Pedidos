@page "/productos"

@using System.Net.Http
@using System.Net.Http.Json
@using System.Text.Json
@using Microsoft.JSInterop
@using System.Text.RegularExpressions

@inject HttpClient Http
@inject IJSRuntime JS

<div class="mb-3">
    <NavLink class="btn btn-secondary me-2" href="/">Volver al Home</NavLink>
</div>

<h3>Productos</h3>

<button class="btn btn-primary mb-3 me-2" @onclick="NuevoProducto">Nuevo Producto</button>
<button class="btn btn-info mb-3" @onclick="CargarProductos">Traer todos</button>

@if (productos == null)
{
    <p>No se han cargado productos todavía.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in productos.Value.EnumerateArray())
            {
                var productoId = p.GetProperty("id").GetInt32();
                <tr>
                    <td>@p.GetProperty("nombre").GetString()</td>
                    <td>@p.GetProperty("precio").GetDecimal()</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => EditarProducto(p)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => EliminarProducto(productoId)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (mostrarFormulario)
{
    <div class="card p-3 mb-3">
        <h5>@(editarId.HasValue ? "Editar Producto" : "Nuevo Producto")</h5>
        <div class="mb-2">
            <label>Nombre:</label>
            <input class="form-control text-uppercase"
                   value="@Nombre"
                   maxlength="100"
                   @oninput="OnNombreChanged" />
        </div>
        <div class="mb-2">
            <label>Precio:</label>
            <input class="form-control"
                   type="text"
                   value="@PrecioString"
                   @oninput="OnPrecioChanged"
                   @onblur="FormatoDecimal" />

        </div>
        <button class="btn btn-success me-2" @onclick="GuardarProducto">Guardar</button>
        <button class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
}

@code {
    private JsonElement? productos;
    private bool mostrarFormulario = false;
    private int? editarId = null;
    private string nombre = string.Empty;
    private decimal precio;

    // --- Nombre con validaciones ---
    public string Nombre
    {
        get => nombre;
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                nombre = string.Empty;
                return;
            }

            var limpio = Regex.Replace(value.Trim(), @"\s+", " ");
            limpio = limpio.ToUpperInvariant();
            if (limpio.Length > 100)
                limpio = limpio.Substring(0, 100);

            nombre = limpio;
        }
    }

    private void OnNombreChanged(ChangeEventArgs e)
    {
        Nombre = e.Value?.ToString() ?? string.Empty;
    }

    // --- Precio con validaciones ---
    public decimal Precio
    {
        get => precio;
        set
        {
            if (value < 0.01m)
                precio = 0.01m;
            else if (value > 99999999.99m)
                precio = 99999999.99m;
            else
                precio = value;
        }
    }

    private void OnPrecioChanged(ChangeEventArgs e)
    {
        PrecioString = e.Value?.ToString() ?? "";
    }

    private void FormatoDecimal()
    {
        // Si el valor es válido, formatear
        if (precio > 0)
        {
            PrecioString = precio.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture);
        }
    }


    private string PrecioString
    {
        get => precio.ToString("0.################", System.Globalization.CultureInfo.InvariantCulture);
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                precio = 0;
                return;
            }

            // Quitar caracteres inválidos (letras, símbolos)
            var limpio = new string(value.Where(c =>
                char.IsDigit(c) || c == '.' || c == ','
            ).ToArray());

            // Convertir coma a punto
            limpio = limpio.Replace(",", ".");

            // Intentar parsear
            if (decimal.TryParse(limpio, System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out var val))
            {
                precio = val; 
            }
        }
    }


    // --- Ya no se carga al inicio ---
    // protected override async Task OnInitializedAsync()
    // {
    //     await CargarProductos();
    // }

    private async Task CargarProductos()
    {
        try
        {
            var response = await Http.GetAsync("productos");

            if (response.IsSuccessStatusCode)
            {
                using var stream = await response.Content.ReadAsStreamAsync();
                var doc = await JsonDocument.ParseAsync(stream);
                productos = doc.RootElement;
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error al obtener productos: {errorMsg}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al conectarse con la API: {ex.Message}, esto quiere decir que la api no funciona en este momento");
        }
    }

    private void NuevoProducto()
    {
        mostrarFormulario = true;
        editarId = null;
        nombre = string.Empty;
        precio = 0;
    }

    private void EditarProducto(JsonElement p)
    {
        mostrarFormulario = true;
        editarId = p.GetProperty("id").GetInt32();
        Nombre = p.GetProperty("nombre").GetString() ?? string.Empty;
        Precio = p.GetProperty("precio").GetDecimal();
    }

    private void Cancelar()
    {
        mostrarFormulario = false;
        editarId = null;
        nombre = string.Empty;
        precio = 0;
    }

    private async Task GuardarProducto()
    {
        if (string.IsNullOrWhiteSpace(nombre))
        {
            await JS.InvokeVoidAsync("alert", "El nombre es obligatorio.");
            return;
        }

        if (nombre.Length > 100)
        {
            await JS.InvokeVoidAsync("alert", "El nombre no puede superar los 100 caracteres.");
            return;
        }

        if (Precio <= 0)
        {
            await JS.InvokeVoidAsync("alert", "El precio debe ser mayor que 0.01.");
            return;
        }

        if (Precio > 99999999.99m)
        {
            await JS.InvokeVoidAsync("alert", "El precio está fuera de rango (máx: 99,999,999.99).");
            return;
        }

        // 🔹 Validar duplicado localmente
        if (productos.HasValue)
        {
            var existe = productos.Value.EnumerateArray().Any(p =>
            {
                var id = p.GetProperty("id").GetInt32();
                var nom = p.GetProperty("nombre").GetString() ?? "";
                return nom.Equals(nombre, StringComparison.OrdinalIgnoreCase)
                       && (!editarId.HasValue || editarId.Value != id);
            });

            if (existe)
            {
                await JS.InvokeVoidAsync("alert", $"El producto '{nombre}' ya existe.");
                return;
            }
        }

        var producto = new { nombre, precio = Precio };
        HttpResponseMessage response;

        try
        {
            if (editarId.HasValue)
                response = await Http.PutAsJsonAsync($"productos/{editarId}", producto);
            else
                response = await Http.PostAsJsonAsync("productos", producto);

            if (response.IsSuccessStatusCode)
            {
                mostrarFormulario = false;
                await CargarProductos();
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error al guardar producto: {errorMsg}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error inesperado: {ex.Message}, esto quiere decir que la api no esta en funcionamiento");
        }
    }

    private async Task EliminarProducto(int id)
    {
        var confirm = await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar este producto?");
        if (!confirm) return;

        try
        {
            var response = await Http.DeleteAsync($"productos/{id}");
            var msg = await response.Content.ReadAsStringAsync();

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Producto eliminado correctamente.");
                await CargarProductos();
            }
            else
            {
                try
                {
                    // Intenta leer el campo "error" del JSON
                    using var doc = JsonDocument.Parse(msg);
                    if (doc.RootElement.TryGetProperty("error", out var errorProp))
                        msg = errorProp.GetString();
                }
                catch
                {
                    // Si no es JSON válido, se usa el mensaje tal cual
                }

                await JS.InvokeVoidAsync("alert", msg);
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al conectar con la API: {ex.Message}. Es posible que la API no esté en funcionamiento.");
        }
    }

}
