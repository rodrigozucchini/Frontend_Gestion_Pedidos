@page "/login"

<PageTitle>Login</PageTitle>

<h1>Ingresar</h1>

<h3>Si ya tienes una cuenta, ingresa tu email para continuar.</h3>

<div>
    <div class="mb-3">
        <label for="email">Email</label>
        <input id="email" class="form-control" @bind="email" />
    </div>

    <a href="/" class="btn btn-danger">Volver</a>
    <button class="btn btn-primary me-2">Ingresar</button>
</div>

@code {
    private string email = "";
}